pragma solidity 0.8.7;

import "@openzeppelin/contracts/token/ERC721/ERC721.sol";


contract HOTSL is ERC721 {
    uint256 public MAX_TOKEN = 10000;
    uint256 public PRICE = 0.118129 ether;
    address public CREATOR = 0x291AE850219b8E32362EB37E6386D5EE2159a3fA;//example
    uint256 public token_count;

    constructor() ERC721("CryptoHots Legendary", "HOTSL") {}

    function _baseURI() internal view virtual override returns (string memory) {
        return "https://gateway.pinata.cloud/ipfs/QmNePA9CBbGbPYg2GLaSBbybrj1FbZDXFNUqvurYnz5QLr/";//example
    }

    function mintNFT(address to) public payable
    {
        require(token_count < MAX_TOKEN, "Sold out");
        require(msg.value >= PRICE, "Must pay price");
        _mint(to, token_count);
        token_count  += 1;
    }

    function withdrawAll() public
    {
        (bool success, ) = CREATOR.call{value:address(this).balance}("");
        require(success, "Transfer failed.");
    }

}
