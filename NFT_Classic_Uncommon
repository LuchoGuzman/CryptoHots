pragma solidity 0.8.7;

import "@openzeppelin/contracts/token/ERC721/ERC721.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC721/extensions/ERC721Enumerable.sol";

contract HOTSCU is ERC721, Ownable, ERC721Enumerable {
    uint256 public _totalSupply = 10000;
    uint256 public PRICE = 0.20 ether;
    address public CREATOR = 0xb4d816b6569dF2f68cf4643B0bD41949D7C544D4;
    uint256 public token_count;

    constructor() ERC721("CryptoHots Classic Uncommon", "HOTSCU")  {}

    function _baseURI() internal view virtual override returns (string memory) {
        return "https://gateway.pinata.cloud/ipfs/QmPFVi9hQc8GZC8CYWdfbEYxdrvpzDCUtsyX7kbjH9iCC3/";
    }

    function mintNFT(address to) public payable
    {
       require(token_count < _totalSupply, "Sold out");
        require(msg.value >= PRICE, "Must pay price");
        _mint(to, token_count);
        token_count  += 1;
    }

   function safeMint(address to, uint256 tokenId) public onlyOwner {
        _safeMint(to, tokenId);
    }

    function _beforeTokenTransfer(address from, address to, uint256 tokenId)
        internal
        override(ERC721, ERC721Enumerable)
    {
        super._beforeTokenTransfer(from, to, tokenId);
    }

    function supportsInterface(bytes4 interfaceId)
        public
        view
        override(ERC721, ERC721Enumerable)
        returns (bool)
    {
        return super.supportsInterface(interfaceId);
    }

     function withdrawAll() public
    {
        (bool success, ) = CREATOR.call{value:address(this).balance}("");
        require(success, "Transfer failed.");
    }  
}
